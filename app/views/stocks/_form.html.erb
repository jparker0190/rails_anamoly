<body class="bg-dark">
    <%= form_with(model: stock, local: true) do |form| %>
      <% if stock.errors.any? %>
        <div id="error_explanation">
          <% stock.errors.full_messages.each do |message| %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
             <strong><%= message %></strong>
             <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
           </div>
          <% end %>
        </div>
      <% end %>

      <div class="form-group text-center">
        <%= form.text_field :ticker, autofocus: true, class: 'form-control', placeholder: "Enter a ticker" %>
      </div>

      <div class="form-group text-center">
        <%= form.number_field :price, autofocus: true, class: 'form-control', placeholder: "Enter the price" %>
      </div>

      <div class="actions">
        <%= form.submit class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </body>